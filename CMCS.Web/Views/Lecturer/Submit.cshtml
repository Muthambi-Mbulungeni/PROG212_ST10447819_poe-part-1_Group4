@model CMCS.Web.Models.ViewModels.ClaimSubmissionViewModel
@{
	ViewData["Title"] = "Submit Claim";
}

<h1>Submit Claim</h1>
<p class="text-muted">Prototype only. No data is saved.</p>

<form>
	<div class="row g-3">
		<div class="col-md-2">
			<label class="form-label">Month</label>
			<input class="form-control" asp-for="Month" />
		</div>
		<div class="col-md-2">
			<label class="form-label">Year</label>
			<input class="form-control" asp-for="Year" />
		</div>
		<div class="col-md-3">
			<label class="form-label">Hourly Rate</label>
			<input class="form-control" asp-for="HourlyRate" />
		</div>
	</div>

	<hr />
	<h5>Activities</h5>
	<table class="table table-bordered align-middle">
		<thead>
			<tr>
				<th>Description</th>
				<th style="width: 160px;">Hours</th>
				<th style="width: 60px;"></th>
			</tr>
		</thead>
		<tbody>
			@for (int i = 0; i < Math.Max(Model.Items.Count, 3); i++)
			{
				<tr>
					<td>
						<input class="form-control" name="Items[@i].ActivityDescription" placeholder="e.g., Lecture: PROG6212" />
					</td>
					<td>
						<input class="form-control" name="Items[@i].Hours" />
					</td>
					<td>
						<button type="button" class="btn btn-outline-secondary" disabled>âœ–</button>
					</td>
				</tr>
			}
		</tbody>
	</table>

	<div class="d-flex gap-2">
		<button type="button" class="btn btn-outline-primary" disabled>Add Row</button>
		<button type="button" class="btn btn-success" disabled>Submit</button>
	</div>
</form>


