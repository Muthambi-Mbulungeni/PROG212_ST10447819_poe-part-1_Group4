@model IEnumerable<CMCS.Web.Models.Claim>
@{
	ViewData["Title"] = "My Claims";
}

<h1>My Claims</h1>
<p class="text-muted">Prototype only. Statuses are sample data.</p>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Claim #</th>
			<th>Period</th>
			<th>Status</th>
			<th>Total Hours</th>
			<th>Amount</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var claim in Model)
		{
			<tr>
				<td>@claim.Id</td>
				<td>@claim.Month/@claim.Year</td>
				<td>@claim.Status</td>
				<td>@claim.TotalHours</td>
				<td>@claim.Amount</td>
				<td>
					<a class="btn btn-sm btn-outline-secondary" asp-controller="Lecturer" asp-action="UploadDocuments" asp-route-id="@claim.Id">Documents</a>
				</td>
			</tr>
		}
	</tbody>
</table>


