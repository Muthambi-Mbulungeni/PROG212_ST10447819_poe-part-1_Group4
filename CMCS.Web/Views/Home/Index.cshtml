@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Contract Monthly Claim System (CMCS)</h1>
    <p class="lead">Prototype UI for Lecturers, Programme Coordinators, and Academic Managers.</p>
    <button type="button" class="btn btn-link" data-bs-toggle="modal" data-bs-target="#aboutModal">About this prototype</button>
    <hr />
    <div class="row g-3">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Lecturer</h5>
                    <p class="card-text">Submit claims, upload documents, and track statuses.</p>
                    <a class="btn btn-primary" asp-controller="Lecturer" asp-action="Dashboard">Open Dashboard</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Programme Coordinator</h5>
                    <p class="card-text">Verify submitted claims and view details.</p>
                    <a class="btn btn-outline-secondary" asp-controller="Admin" asp-action="Coordinator">Open View</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Academic Manager</h5>
                    <p class="card-text">Approve verified claims and add comments.</p>
                    <a class="btn btn-outline-secondary" asp-controller="Admin" asp-action="Manager">Open View</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="aboutModal" tabindex="-1" aria-labelledby="aboutModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="aboutModalLabel">About CMCS Prototype</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        This is a non-functional front-end prototype built with ASP.NET Core MVC for POE Part 1. All actions are placeholders; no data is saved.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
