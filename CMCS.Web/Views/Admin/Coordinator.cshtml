@model IEnumerable<CMCS.Web.Models.Claim>
@{
	ViewData["Title"] = "Coordinator - Verify Claims";
}

<h1>Coordinator - Verify Claims</h1>
<p class="text-muted">Prototype only. Actions are disabled.</p>

<table class="table table-hover">
	<thead>
		<tr>
			<th>Claim #</th>
			<th>Period</th>
			<th>Hours</th>
			<th>Amount</th>
			<th>Status</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var c in Model)
		{
			<tr>
				<td>@c.Id</td>
				<td>@c.Month/@c.Year</td>
				<td>@c.TotalHours</td>
				<td>@c.Amount</td>
				<td>@c.Status</td>
				<td>
					<a class="btn btn-sm btn-outline-primary" asp-action="Review" asp-route-id="@c.Id">Review</a>
				</td>
			</tr>
		}
	</tbody>
</table>


