@model CMCS.Web.Models.Claim
@{
	ViewData["Title"] = "Review Claim";
}

<h1>Review Claim #@Model.Id</h1>
<p class="text-muted">Prototype only. Approve/Reject disabled.</p>

<div class="row g-3">
	<div class="col-md-6">
		<div class="card">
			<div class="card-header">Summary</div>
			<div class="card-body">
				<p><strong>Period:</strong> @Model.Month/@Model.Year</p>
				<p><strong>Status:</strong> @Model.Status</p>
				<p><strong>Hourly Rate:</strong> @Model.HourlyRate</p>
				<p><strong>Total Hours:</strong> @Model.TotalHours</p>
				<p><strong>Amount:</strong> @Model.Amount</p>
			</div>
		</div>
	</div>
	<div class="col-md-6">
		<div class="card">
			<div class="card-header">Documents</div>
			<div class="card-body">
				<ul>
					@foreach (var d in Model.Documents)
					{
						<li>@d.FileName</li>
					}
				</ul>
			</div>
		</div>
	</div>
</div>

<div class="card mt-3">
	<div class="card-header">Lines</div>
	<div class="card-body">
		<table class="table table-sm">
			<thead>
				<tr>
					<th>Description</th>
					<th style="width: 120px;">Hours</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var l in Model.Lines)
				{
					<tr>
						<td>@l.ActivityDescription</td>
						<td>@l.Hours</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>

<div class="mt-3 d-flex gap-2">
	<button class="btn btn-success" disabled>Approve</button>
	<button class="btn btn-outline-secondary" disabled>Verify</button>
	<button class="btn btn-danger" disabled>Reject</button>
</div>


